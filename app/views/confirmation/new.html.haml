.contents
  .header-user
    .header-user__logo-default
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3296506464", class: "mercari-logo", height:49, width:185), "/"

  .confirm-box
    .confirm-box__title
      購入内容の確認
    .confirm-box__detail
      .confirm-box__detail__image-box
        = image_tag "#{@item.images.first.image}", :size =>'185x180'
        .confirm-box__detail__item-title
          = @item.title
      .confirm-box__detail__item-price
        = "¥#{@item.price}"

        .confirm-box__detail__item-price-included
          送料込み
      .confirm-box__detail__purchace-btn
      = link_to 'ポイントはありません', '#', class: "purchace-btn"
      %br
      .confirm-box__detail__payment-title
        支払い金額
        .confirm-box__detail__payment-price
          = "¥#{@item.price}"
      .confirm-box__detail__decision-btn
      - if current_user.card_number.present? && @item.purchase == "exhibiting"
        = form_tag controller: :items,action: :pay, method: :post,id: (@item.id) do
          = submit_tag "購入する",class: "decision-btn","data-key":"pk_test_c1ae18df0495c115e3701ec4"
        -# = link_to '購入する', "/items/buied/#{@item.id}" , class: "decision-btn"
      - elsif @item.purchase == "exhibiting"
        = form_tag controller: :items,action: :pay, method: :post,id: (@item.id) do
          :plain
            <script type="text/javascript" src="https://checkout.pay.jp" class="payjp-button" data-key="pk_test_c1ae18df0495c115e3701ec4"></script>
      - else 
        = link_to '購入できません', "#" , class: "decision-btnn" 

    .comfirm-box__shipping-address
      .confirm-box__shipping-address__user
        %p4 配送先
        %p5 〒#{@buyer.addresses.first.postcode}
        %br
        %p5 #{@buyer.addresses.first.prefecture.name}#{@buyer.addresses.first.city}#{@buyer.addresses.first.block}#{@buyer.addresses.first.building}
        %br
        %p6 #{@buyer.nickname}
        %br
      .confirm-box__shipping-address__alter
      = link_to '変更する 》', '#', class: "address-alter"
    .confirm-box__paymethod
      .confirm-box__paymethod__user
      - if current_user.card_number.present? then #id仮置きです
        %p7 支払い方法
        %p5= "************" + @cards.card_number.last(4)
        %br
        %p5= @cards.month + "/" + @cards.year
        %br
        %img{class: "visa-logo", height: "26", width: "40", src: "data:image/png;base64,"}
      - else  
        = "/"
      
      .confirm-box__paymethod__alter
      = link_to '変更する 》', new_card_path, class: "paymethod-alter"

  .footer-user
    %ul
      %li= link_to 'プライバシーポリシー', '#'
      %li= link_to 'メルカリ利用規約', '#'
      %li= link_to '特定商取引に関する表記', '#'
    .footer-user__link
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3296506464", class: "mercari-graylogo", height: 80, width: 60), "/"
      %p © 2019 Mercari
