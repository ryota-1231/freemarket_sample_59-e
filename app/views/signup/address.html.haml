.contents
  .header-user
    .header-user__logo-signup
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3296506464", class: "mercari-logo-user", height:49, width:185), "#"
    .order-sign
      %ol
        %li.member
          会員情報
          .order-radius__red__first
        %li.phone-number
          電話番号認証
          .order-radius__red
        %li.address-red
          お届け先住所入力
          .order-radius__red
        %li.pay-method
          支払い方法
          .order-radius
        %li.complete
          完了
          .order-radius

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .signup__address
      .signup__address-title
        住所入力
      .signup__address__box
        .signup__address__box-input
          .field
            .field-info__name
              %label{for: "nickname", class:"position"} お名前
              %span.form-require 必須
              %br
            .field-input
            = f.email_field :email, class: "input-default", autocomplete: "email", placeholder: "例）山田"
            %br
            = f.email_field :email, class: "input-default", autocomplete: "email", placeholder: "例）彩"
          .field
            .field-info__kana-name
              %label{for: "email"} お名前カナ
              %span.form-require 必須
              %br
            .field-input
            = f.password_field :email, class: "input-default", autocomplete: "current-password", placeholder: "例）ヤマダ"
            %br
            = f.password_field :email, class: "input-default", autocomplete: "current-password", placeholder: "例）アヤ"
          .field
            .field-info__postcode
              %label{for: "password"} 郵便番号
              %span.form-require 必須
              %br
            .field-input
            = f.email_field :password, class: "input-default", autocomplete: "email", placeholder: "例) 123-4567"
          .field
            .field-info__prefecture
              %label{for: "password"} 都道府県
              %span.form-require 必須
              %br
            .field-input
            = f.password_field :password, class: "input-default", autocomplete: "current-password", placeholder: ""
          .field  
            .field-info__city
              %label{for: "family_name_kanji"} 市区町村
              %span.form-require 必須
              %br
            .field-input
            = f.email_field :email, class: "input-default", autocomplete: "email", placeholder: "例）横浜市緑区"
          .field
            .field-info__block
              %label{for: "family-name-katakana"} 番地
              %span.form-any 任意
              %br
            .field-input
            = f.email_field :email, class: "input-default", autocomplete: "email", placeholder: "例）柳ビル103"
          .field
            .field-info__phone-number
              %label{for: "family-name-katakana"} 電話
              %span.form-any 任意
              %br
            .field-input
            = f.email_field :email, class: "input-default__last", autocomplete: "email", placeholder: "例）09012345678"

          .next__btn
          = link_to '次へ進む', '#', class:"next-btn"

  .footer-user
    %ul
      %li= link_to 'プライバシーポリシー', '#'
      %li= link_to 'メルカリ利用規約', '#'
      %li= link_to '特定商取引に関する表記', '#'
    .footer-user__link
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3296506464", class: "mercari-graylogo", height: 80, width: 60), "#"
      %p © 2019 Mercari