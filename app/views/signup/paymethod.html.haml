.contents
  .header-user
    .header-user__logo-signup
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3296506464", class: "mercari-logo-user", height:49, width:185), "#"
    .order-sign
      %ol
        %li.member
          会員情報
          .order-radius__red__first
        %li.phone-number
          電話番号認証
          .order-radius__red
        %li.address
          お届け先住所入力
          .order-radius__red
        %li.pay-method-red
          支払い方法
          .order-radius__red
        %li.complete
          完了
          .order-radius

  = form_for(resource, as: resource_name, url:'/signup', method: :post ) do |f|
    .signup__payment
      .signup__payment-title
        支払い方法
      .signup__payment__box
        .signup__payment__box-input
          .field
            .field-info__cardnumber
              %label{for: "nickname", class:"position"} カード番号
              %span.form-require 必須
              %br
            .field-input
            = f.number_field :card_number, class: "input-default", autocomplete: "email", placeholder: "半角数字のみ"
            .card-box
            = image_tag(src= "data:image/png;base64,", class: "card-logo", height: 80, width: 240)

          .field
            .field-info__deadline
              %label{for: "email"} 有効期限
              %span.form-require 必須
              %br
            .field-input__select
            = f.number_field :expiration_month, class: "input-default-quarter", autocomplete: "current-password", placeholder: ""
            %p2 月
            %br
            = f.number_field :expiration_year, class: "input-default-quarter", autocomplete: "email", placeholder: ""
            %p2 年
          .field
            .field-info__securitycode
              %label{for: "password"} セキュリティーコード
              %span.form-require 必須
              %br
            .field-input
            = f.password_field :password, class: "input-default", autocomplete: "current-password", placeholder: "カード背面もしくは3桁の番号"

          .about__securitycode
            = link_to 'カード裏面の番号とは？', '#'

          .next__btn
            = f.submit '次へ進む', class:"next-btn"
  .footer-user
    %ul
      %li= link_to 'プライバシーポリシー', '#'
      %li= link_to 'メルカリ利用規約', '#'
      %li= link_to '特定商取引に関する表記', '#'
    .footer-user__link
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3296506464", class: "mercari-graylogo", height: 80, width: 60), "#"
      %p © 2019 Mercari