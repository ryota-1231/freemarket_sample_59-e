.contents
  .header-user
    .header-user__logo-default
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3296506464", class: "mercari-logo", height:49, width:185), "#"

  .login
    .login__box
      .login__box__upper
        .login__box__upper-words
          アカウントをお持ちでない方はこちら
        .login__box__upper-newusers
        =link_to member_signup_index_path, class: "login__box__upper-newuser" do
          新規会員登録
      .login__box__center
        .login__box__center-facebooks
        =link_to user_facebook_omniauth_authorize_path, class: "login__box__center-facebook" do
          = fa_icon 'facebook-square', class: "login__box__center--icon"
          Facabookでログイン
        .login__box__center-googles
        =link_to user_google_oauth2_omniauth_authorize_path, class: "login__box__center-google" do
          = fa_icon 'google', class: "login__box__center--icon"
          Googleでログイン
      .login__box__bottom
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "email-input"
          .field
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "password-input"
          .g-recaptcha{class: "g-recaptcha", "data-sitekey" => "6LdFBroUAAAAAE5mCF3yc3ssUdAT5OnAD0r5LYsn"}
        - if devise_mapping.rememberable?
          = render "devise/shared/links"

  .footer-user
    %ul
      %li= link_to 'プライバシーポリシー', '#'
      %li= link_to 'メルカリ利用規約', '#'
      %li= link_to '特定商取引に関する表記', '#'
      %br
    .footer-user__link
    = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3296506464", class: "mercari-graylogo", height: 80, width: 60), "#"
    %p © 2019 Mercari
