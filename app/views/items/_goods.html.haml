- unless item.good_user(current_user.id).blank?
  = link_to item_good_path(item.id,current_user.id), method: :delete, remote: "true" do
    .detail__box__icon--good.icon-red
      = fa_icon "heart", class: "icon-red"
      いいね! 
      = @item.goods.count
- else
  = link_to item_goods_path(item.id,current_user.id), method: :post, remote: "true" do
    .detail__box__icon--good.icon-black
      = fa_icon "heart", class: "icon-black"
      いいね! 
      = @item.goods.count
